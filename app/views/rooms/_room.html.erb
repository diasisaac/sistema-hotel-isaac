<table class="table table-striped table-sm">
  <thead class="text-center" >
  <tr>
    <th scope="col">Id</th>
    <th scope="col">Nome</th>
    <th scope="col">Capacidade</th>
    <th scope="col">Pre√ßo</th>
    <th scope="col">Detalhes</th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody class="text-center" >
    <% if !@rooms.nil? %>
      <%= @rooms.each do |room|%>
        <tr>
          <td><%= room.id %></td>
          <td><%= room.name %></td>
          <td><%= room.capacity %></td>
          <td><%= room.price %></td>
          <td><%= room.detail%></td>
          <td><%= link_to "Editar", edit_room_path(room), class: "btn btn-sm btn-info" %></td>
          <td><%= button_to "Apagar", room, method: :delete, class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
    <% else %>
      <td><%= @room.id %></td>
      <td><%= @room.name %></td>
      <td><%= @room.capacity %></td>
      <td><%= @room.price %></td>
      <td><%= @room.detail%></td>
      <td><%= link_to "Editar", edit_room_path(@room), class: "btn btn-sm btn-info",id:"e-#{room.name}" %></td>
      <td><%= button_to "Apagar", room, method: :delete, class: "btn btn-sm btn-danger" %></td>
    <% end %>
  </tbody>
</table>
